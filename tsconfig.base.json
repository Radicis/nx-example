{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "libs/react/components": ["packages/libs/react/components/src/index.ts"],
      "libs/react/hooks": ["packages/libs/react/hooks/src/index.ts"],
      "libs/shared/utils": ["packages/libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage", "data", "tmp"]
}
